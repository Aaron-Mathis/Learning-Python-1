print()
color("yellow")
print('{:>100s}'.format("Definitely not a rip off of"))
print('{:>100s}'.format(" a certain other social"))
print('{:>100s}'.format("network"))
print()
color("red")
print('{:^60s}'.format("Honest."))
print()
