def login():
 userName = "Tony"
 passWord = "Balogna"
 while True:
   inputUserName = input("Username: ")
   inputPassWord = input("Password: ")
   if inputUserName == userName and inputPassWord == passWord:
     print("Login Successful")
     break
   else:
     print("Incorrect Username or Password")
     login()

login()     
    

  
