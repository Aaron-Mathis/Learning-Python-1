print("Today we're going to test your knowledge. Choose a number and we'll see if you know how to multiply")
print()
score = 0
number = int(input("What number would you like to choose? "))
print()
for i in range(1, 11 ,1):
  multiRight = i*number
  print(i, " x ", number,) 
  multiNumber = int(input(" = "))
  if multiNumber != (i*number):
    print("Wrong! The answer was", i*number)
    i += 1
  if multiNumber == multiRight:
    print("Good job, hot shot!")
    i += 1
    score += 1 
  print()
print("Your score: ", score)
