myString = input("Give me a sentance and I'll spice it up.\n>")
for letter in myString:
  if letter.lower() == "r":
    print('\033[31m', end="")
  elif letter.lower() == "g":
    print('\033[32m', end="")
  elif letter.lower() == "b":
    print('\033[34m', end="")
  elif letter.lower() == "p":
    print('\033[35m', end="")
  elif letter.lower() == "y":
    print('\033[33m', end="")
  print(letter, end="")  
